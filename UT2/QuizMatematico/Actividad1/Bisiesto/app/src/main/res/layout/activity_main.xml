<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bisiesto"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <Switch
        android:id="@+id/swFondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fondo amarillo"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btGenerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Generar Num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swFondo" />

    <EditText
        android:id="@+id/edtNumero"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Año"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/btGenerar"
        app:layout_constraintStart_toEndOf="@id/btGenerar"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/txtPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Este año es bisiesto?"
        app:layout_constraintTop_toBottomOf="@id/btGenerar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <RadioButton
        android:id="@+id/rbSi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sí"
        app:layout_constraintTop_toBottomOf="@id/txtPregunta"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <RadioButton
        android:id="@+id/rbNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        app:layout_constraintTop_toBottomOf="@id/rbSi"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/btComprobar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprobar resultado"
        app:layout_constraintTop_toBottomOf="@id/rbNo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btComprobar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
